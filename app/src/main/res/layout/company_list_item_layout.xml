<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/main_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/select_item_background"
                android:clickable="true">


    <LinearLayout
        android:id="@+id/text_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:orientation="vertical"
        android:paddingBottom="@dimen/margin_glutter"
        android:paddingLeft="@dimen/main_margin_left"
        android:paddingRight="@dimen/main_margin_left"
        android:paddingTop="@dimen/margin_top_glutter">

        <TextView
            android:id="@+id/company_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:gravity="left|center_vertical"
            android:text="название"
            android:textColor="@color/primary_text_color"
            android:textSize="@dimen/subheding_text_size"/>

        <TextView
            android:id="@+id/company_item_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:gravity="left|center_vertical"
            android:textColor="@color/hint_or_disabled_text_color"
            android:textSize="@dimen/body_text_size"/>

    </LinearLayout>
</RelativeLayout>