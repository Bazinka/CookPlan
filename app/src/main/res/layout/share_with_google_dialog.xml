<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
        android:id="@+id/user_email_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Введите email пользователя, с которым вы хотите поделиться"
        android:textColor="@color/primary_text_color"
        android:textSize="@dimen/subheding_text_size"/>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Введите email"
        android:scrollbars="vertical"
        android:theme="@style/CookPlanTextInputLayoutStyle"
        app:hintTextAppearance="@style/CookPlanHitInputStyle">

        <EditText
            android:id="@+id/user_email_editText"
            style="@style/CookPlanEditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textEmailAddress"
            android:lines="10"
            android:maxLines="10"
            android:scrollbars="vertical"/>
    </android.support.design.widget.TextInputLayout>

</LinearLayout>