<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/add_user_edit_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/enter_email_edittext_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Введите email"
            android:padding="@dimen/main_item_padding"
            android:scrollbars="vertical"
            android:theme="@style/CookPlanTextInputLayoutStyle"
            app:hintTextAppearance="@style/CookPlanHitInputStyle">

            <EditText
                android:id="@+id/user_email_editText"
                style="@style/CookPlanEditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:imeOptions="actionDone"
                android:inputType="textEmailAddress"
                android:lines="1"
                android:maxLines="1"
                android:scrollbars="vertical"/>
        </android.support.design.widget.TextInputLayout>
    </RelativeLayout>
</LinearLayout>