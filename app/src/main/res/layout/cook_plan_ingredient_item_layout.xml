<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/main_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:clickable="true"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="@dimen/small_inrgedient_padding"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:id="@+id/cook_plan_ingred_card_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/accent_color"
            android:clickable="false"
            android:orientation="horizontal">

            <!--?attr/selectableItemBackground-->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="false"
                android:paddingBottom="@dimen/margin_glutter"
                android:paddingLeft="@dimen/main_margin_left"
                android:paddingRight="@dimen/main_margin_left"
                android:paddingTop="@dimen/margin_top_glutter">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:clickable="false">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toLeftOf="@+id/cook_plan_ingred_amount"
                        android:layout_toStartOf="@+id/cook_plan_ingred_amount"
                        android:clickable="false"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/cook_plan_ingred_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:clickable="false"
                            android:gravity="left|center_vertical"
                            android:text="название"
                            android:textColor="@color/white"
                            android:textSize="@dimen/title_text_size"/>

                        <TextView
                            android:id="@+id/cook_plan_ingred_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:clickable="false"
                            android:gravity="left|center_vertical"
                            android:text="время"
                            android:textColor="@color/white"
                            android:textSize="@dimen/body_text_size"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/cook_plan_ingred_amount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:clickable="false"
                        android:gravity="right|center_vertical"
                        android:lines="1"
                        android:paddingLeft="@dimen/main_margin_left"
                        android:paddingRight="@dimen/small_inrgedient_padding"
                        android:text="12"
                        android:textColor="@color/white"
                        android:textSize="@dimen/subheding_text_size"/>

                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>