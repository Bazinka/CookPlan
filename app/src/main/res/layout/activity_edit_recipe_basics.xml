<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/main_margin_left">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/recipe_name_edit_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Recipe name"
        android:theme="@style/EditRecipeTextInputLayoutStyle"
        app:hintTextAppearance="@style/EditRecipeHitInputStyle">

        <EditText
            android:id="@+id/recipe_name_edit_text"
            style="@style/EditRecipeEditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapSentences" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/recipe_name_edit_layout"
        android:gravity="center"
        android:text="Когда-нибудь тут будут категории и другие характеристики рецепта"
        android:textColor="@color/primary_light" />

    <Button
        android:id="@+id/ocr_desc_btn"
        style="@style/CookplanButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text"
        android:text="@string/recognize_button_title" />

    <EditText
        android:id="@+id/recipe_process_edit_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/ocr_desc_btn"
        android:hint="@string/recipe_desc_hint"
        android:inputType="textCapSentences|textMultiLine"
        android:scrollbars="vertical"
        android:textColorHint="@color/primary_light" />

</RelativeLayout>
