<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/main_margin_left"
    android:paddingRight="@dimen/main_margin_left">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/recipe_name_edit_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Recipe name"
        android:theme="@style/EditRecipeTextInputLayoutStyle"
        app:hintTextAppearance="@style/EditRecipeHitInputStyle">

        <EditText
            android:id="@+id/recipe_name_edit_text"
            style="@style/EditRecipeEditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textCapSentences" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/recipe_name_edit_layout"
        android:gravity="center"
        android:text="Когда-нибудь тут будут категории и другие характеристики рецепта"
        android:textColor="@color/primary_light" />
</RelativeLayout>
