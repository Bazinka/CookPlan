<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/main_view"
                android:layout_margin="@dimen/card_view_margin">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/enter_email_edittext_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Введите email"
        android:scrollbars="vertical"
        android:theme="@style/CookPlanTextInputLayoutStyle"
        app:hintTextAppearance="@style/CookPlanHitInputStyle">

        <EditText
            android:id="@+id/user_email_editText"
            style="@style/CookPlanEditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionDone"
            android:inputType="textEmailAddress"
            android:lines="1"
            android:maxLines="1"
            android:scrollbars="vertical"/>
    </android.support.design.widget.TextInputLayout>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/enter_email_edittext_layout"
        android:background="@color/primary_light"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/users_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/view"
        android:scrollbars="vertical"/>

</RelativeLayout>
