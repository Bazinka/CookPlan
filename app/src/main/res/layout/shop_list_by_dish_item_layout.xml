<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/main_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
    <!--android:background="@drawable/ripple_ingredient_item_back"-->
    <!--android:clickable="true"-->

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:orientation="horizontal"
        android:paddingBottom="@dimen/small_inrgedient_padding"
        android:paddingLeft="@dimen/small_item_padding"
        android:paddingRight="@dimen/small_item_padding">

        <View
            android:id="@+id/category_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/main_content_layout"
            android:layout_alignLeft="@+id/main_content_layout"
            android:layout_alignRight="@+id/main_content_layout"
            android:layout_alignTop="@+id/main_content_layout"
            android:background="@drawable/shop_list_by_dish_rounded_back"/>

        <RelativeLayout
            android:id="@+id/main_content_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:padding="@dimen/small_inrgedient_padding">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:clickable="false"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ingredient_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:gravity="left|center_vertical"
                    android:paddingRight="@dimen/small_inrgedient_padding"
                    android:text="@string/name_title"
                    android:textColor="@color/white"
                    android:textSize="@dimen/subheding_text_size"/>

                <TextView
                    android:id="@+id/ingredient_item_amount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:gravity="right|center_vertical"
                    android:lines="1"
                    android:paddingLeft="@dimen/main_margin_left"
                    android:paddingRight="@dimen/small_inrgedient_padding"
                    android:textColor="@color/white"
                    android:textSize="@dimen/subheding_text_size"/>

            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>