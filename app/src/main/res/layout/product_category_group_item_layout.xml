<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants">

    <RelativeLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:clickable="false"
        android:paddingLeft="@dimen/main_margin_left"
        android:paddingRight="@dimen/main_margin_left">

        <TextView
            android:id="@+id/product_category_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_margin="@dimen/main_item_padding"
            android:layout_toLeftOf="@+id/product_category_checkBox"
            android:layout_toStartOf="@+id/product_category_checkBox"
            android:clickable="false"
            android:gravity="left|center_vertical"
            android:paddingBottom="@dimen/todo_list_category_size"
            android:paddingLeft="@dimen/main_margin_left"
            android:text="название"
            android:textColor="@color/primary_text_color"
            android:textSize="@dimen/title_text_size"/>

        <CheckBox
            android:id="@+id/product_category_checkBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginBottom="@dimen/main_item_padding"
            android:layout_marginLeft="@dimen/main_item_padding"/>
    </RelativeLayout>

    <View
        android:id="@+id/category_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/todo_list_category_size"
        android:layout_alignBottom="@+id/relativeLayout2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@color/accent_color"/>

</RelativeLayout>