<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_recipe_view">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ProgressBar
            android:id="@+id/progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:indeterminate="true"/>

        <TextView
            android:id="@+id/ingredients_title_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/progress_bar"
            android:layout_margin="@dimen/text_margin"
            android:text="@string/ingredients"
            android:textSize="@dimen/title_text_size"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/ingredients_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/ingredients_title_textview"
            android:scrollbars="vertical"/>

        <View
            android:id="@+id/separate_view"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/ingredients_recycler_view"
            android:layout_marginBottom="@dimen/text_margin"
            android:layout_marginTop="@dimen/text_margin"
            android:background="@color/primary_the_lightest"/>

        <TextView
            android:id="@+id/description_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/separate_view"
            android:layout_margin="@dimen/text_margin"
            android:text="@string/recipe_description_title"
            android:textSize="@dimen/title_text_size"/>

        <TextView
            android:id="@+id/description_body_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/description_title"
            android:layout_margin="@dimen/text_margin"
            android:text="@string/recipe_description_title"
            android:textSize="@dimen/subheding_text_size"/>

    </RelativeLayout>
</android.support.v4.widget.NestedScrollView>
