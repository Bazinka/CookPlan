<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/category_view"
        android:layout_width="15dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/main_layout" />

    <LinearLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/category_view"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/small_item_padding"
            android:paddingLeft="@dimen/small_item_padding"
            android:paddingRight="@dimen/small_item_padding"
            android:paddingTop="@dimen/main_item_padding"
            android:text="название"
            android:textColor="@color/primary_text_color"
            android:textSize="@dimen/subheding_text_size" />

        <TextView
            android:id="@+id/category_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/main_item_padding"
            android:paddingLeft="@dimen/small_item_padding"
            android:paddingRight="@dimen/small_item_padding"
            android:text="название"
            android:textColor="@color/primary_text_color"
            android:textSize="@dimen/body_text_size" />
    </LinearLayout>
</RelativeLayout>